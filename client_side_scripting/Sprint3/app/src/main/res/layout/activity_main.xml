<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff6"
    tools:context="com.example.user.sprint3.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Email address or Phone number"
        android:ems="10"
        android:id="@+id/editTextEML"

        android:layout_above="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:width="100dp"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Create New Account"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/buttnsty"
        android:textColor="#ffffff"
        android:layout_width="200dp" />

    <TextView
        android:text="Forgotten Password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp" />

    <TextView
        android:text="Help Centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/button2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom1"
        android:background="#ffffff"
        android:layout_below="@+id/textView4"
        android:paddingBottom="120dp"
        android:layout_marginTop="30dp">


    </RelativeLayout>

    <Button
        android:text="LOGIN"
        android:layout_height="wrap_content"
        android:id="@+id/button"


        android:background="@drawable/buttnsty"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp" android:textColor="#ffffff"


        />


</RelativeLayout>
