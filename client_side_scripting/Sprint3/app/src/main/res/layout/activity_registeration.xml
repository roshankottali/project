<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registeration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.sprint3.Registeration">


    <TextView
        android:text="Sur name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/editTextFname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter sur name"
        android:ems="10"
        android:id="@+id/editTextSname"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/editTextFname" />

    <TextView
        android:text="First name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/editTextFname"
        android:layout_alignBottom="@+id/editTextFname"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="Email id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSname"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="43dp"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Email id"
        android:ems="10"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/editTextSname"
        android:id="@+id/editTextemail" />

    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="44dp"
        android:id="@+id/textView7" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGender"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignEnd="@+id/editTextemail"
        android:layout_alignStart="@+id/editTextemail" />

    <TextView
        android:text="Date of birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerGender"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Day"
        android:ems="10"
        android:id="@+id/editTextday"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/spinnerGender"
        android:layout_width="80dp" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Month"
        android:ems="10"
        android:layout_below="@+id/editTextday"
        android:layout_alignStart="@+id/editTextday"
        android:id="@+id/editTextmonth" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Year"
        android:ems="10"
        android:id="@+id/editTextyear"
        android:layout_below="@+id/editTextmonth"
        android:layout_alignStart="@+id/editTextmonth" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextyear"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="12dp"
        android:id="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Password"
        android:ems="10"
        android:layout_below="@+id/editTextyear"
        android:layout_alignEnd="@+id/spinnerGender"
        android:id="@+id/editTextpwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter first name"
        android:ems="10"
        android:id="@+id/editTextFname"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginStart="27dp" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextpwd"
        android:id="@+id/buttonREG"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
